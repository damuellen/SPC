{
	"name": "Swift",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "latest",
			"INSTALL_NODE": "false",
			"NODE_VERSION": "lts/*"
		}
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"settings": {
		"lldb.library": "/usr/lib/liblldb.so",
		"lldb.launch.expressions": "native",
		"lldb.evaluateForHovers": false,
		"terminal.integrated.scrollback": 50000,
		"terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.fontSize": 16,
		"extensions.ignoreRecommendations": true,
		"diffEditor.ignoreTrimWhitespace": false,
		"sourcekit-lsp.toolchainPath": "/usr/bin/",
		"sourcekit-lsp.serverPath": "/usr/bin/sourcekit-lsp",
		"apple-swift-format.path": "/workspaces/swift-format/.build/release/swift-format",
		"editor.fontFamily": "SF Mono, Menlo, Monaco, Consolas, monospace",
    "editor.fontSize": 16,
		"editor.tabSize": 2,
		"editor.autoClosingQuotes": "never",
		"editor.autoIndent": "advanced",
		"editor.rulers": [80,100]
	},
	"extensions": [
		"pvasek.sourcekit-lsp--dev-unofficial",
		"vadimcn.vscode-lldb",
		"hbenl.vscode-test-explorer",
		"makeitbetter.vscode-swift-test-adapter",
		"cweijan.vscode-office",
		"philhindle.errorlens",
		"wattenberger.footsteps"
	], 
}
