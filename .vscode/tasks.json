{
    "version": "2.0.0",
    "problemMatcher": {
        "owner": "sourcekit-lsp",
        "fileLocation": "autoDetect",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
    },
    "tasks": [
        {
            "label": "swift-build-executable",
            "type": "shell",
            "command": "swift build -Xswiftc -g -Xswiftc -Xfrontend -Xswiftc -serialize-debugging-options"
        },
        {
            "label": "swift-build-tests",
            "type": "shell",
            "command": "swift build --build-tests -Xswiftc -g -Xswiftc -Xfrontend -Xswiftc -serialize-debugging-options"
        }
    ]
}
