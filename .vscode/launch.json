    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "PackageTests",
            "program": "${workspaceFolder}/.build/debug/SPCPackageTests.xctest",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "swift-build-tests"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "SolarPerformanceCalc",
            "program": "${workspaceFolder}/.build/debug/SolarPerformanceCalc",
            "args": ["-c", "${workspaceFolder}/COM"],
            "args": ["-m", "${workspaceFolder}/Model.playground/Resources/AlAbdaliyah.mto"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "swift-build-executable"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "SolarFieldCalc",
            "program": "${workspaceFolder}/.build/debug/SolarFieldCalc",           
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "swift-build-executable"
        }
    ]
}
